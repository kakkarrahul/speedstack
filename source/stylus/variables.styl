theme_border = rgba(#000, 0.18)
theme_widget = #282828
theme_veil = rgba(#000, 0.06)
theme_panel = rgba(#000, 0.5)

// Base Color
color_base = color_blue
color_base_border = darken(color_base, 10%)

is_theme_light = (luminosity(theme_base)) > (0.36)
is_color_light = (luminosity(color_base)) > (0.36)

theme_font = is_theme_light ? #888 : #6e6e6e
color_font = is_color_light ? theme_font : #f2f2f2




