/* FONTS
 * Use these variables as font values
 */
font_xlight  = 'Roboto-Thin', sans-serif
font_light   = 'Roboto-Light', 'HelveticaNeue-Light', sans-serif
font_regular = 'Roboto-Regular', 'HelveticaNeue', sans-serif
font_semibold= 'Roboto-Medium', sans-serif
font_bold    = 'Roboto-Bold', sans-serif

line_height = 28px
font_size = 14px




// Z-Index Scale
z0 = 0
z1 = 100
z2 = 200
z3 = 300
z4 = 400
z5 = 500
z6 = 600
z7 = 700
z8 = 800
z9 = 900



// Time scale for uniform animations.
time_1x = 0.1s
time_2x = time_1x * 2
time_3x = time_1x * 3
time_4x = time_1x * 4


// Opacity States
opacity_default  = .82
opacity_disabled = .64
opacity_hover  = 1
opacity_active = 1 



/* Structure Variables
 */
gutter_x = 16px
gutter_y = 24px


// Easings
easing_material = unquote('cubic-bezier(.55,0,.1,1)')

